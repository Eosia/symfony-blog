{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ controller_name }}! ✅</h1>

    {{ form_start(form) }}
        {{ form_row(form.username, {label:"Nom d'utilisateur :", 'attr': {
            'placeholder' : "Veuillez saisir un nom d'utilisateur"
        }}) }}
        {{ form_row(form.firstname, {label:"Votre prénom :", 'attr': {
            'placeholder' : "Veuillez saisir votre prénom"
        }}) }}
        {{ form_row(form.lastname, {label:"Votre nom :", 'attr': {
            'placeholder' : "Veuillez saisir votre nom"
        }}) }}
        {{ form_row(form.email, {label:"Votre e-mail :", 'attr': {
            'placeholder' : "Veuillez saisir votre e-mail"
        }}) }}
        {{ form_row(form.password, {label:"Votre mot de passe :", 'attr': {
            'placeholder' : "Veuillez saisir votre mot de passe"
        }}) }}
        {{ form_row(form.passwordConfirm, {label:"Confirmer votre mot de passe :", 'attr': {
            'placeholder' : "Veuillez confirmer votre mot de passe"
        }}) }}
        <button class="btn btn-success">S'inscrire</button>
    {{ form_end(form) }}

</div>
{% endblock %}
